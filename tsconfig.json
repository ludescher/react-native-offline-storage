{
    "compilerOptions": {
        "rootDir": "typescript",
        "outDir": "dist",
        "noImplicitAny": true,
        "target": "ES6",
        "declaration": true,
        "declarationMap": true,
        "removeComments": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "ES6"
        ],
        "isolatedModules": true,
        "noEmit": true,
        "strict": true
    },
    "files": [
        "typescript/main.ts"
    ],
    "include": [
        "typescript/**/*"
    ],
    "exclude": [
        "node_modules",
        "Example",
        "dist"
    ]
}